<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                         
                                                                                      
           

    <nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.ui.dashbroad.DashBroadActivity" android:tag="layout/activity_dash_broad_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="@string/tag_content">

            <RelativeLayout
                android:id="@+id/layoutDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".app.ui.dashbroad.DashBroadActivity">

                <ImageView
                    android:id="@+id/imgDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_city" />

<!--                <androidx.appcompat.widget.Toolbar-->
<!--                    android:id="@+id/toolbar"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="?attr/actionBarSize"-->
<!--                    android:background="@color/colorPrimary"-->
<!--                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
<!--                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

                <RelativeLayout
                    android:id="@+id/tbDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnNav"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@null"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/ic_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:tag="binding_1"                                                 
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:tag="binding_2"                   
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/search" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:visibility="gone" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tbDashBoard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_bg_text_today"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:text="Today"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp" />

<!--                        <com.loopeer.shadow.ShadowView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="@dimen/_250sdp"-->
<!--                            android:background="@drawable/bg_layout_blur"-->
<!--                            android:elevation="@dimen/_10sdp"-->
<!--                            app:cornerRadius="@dimen/_15sdp"-->
<!--                            app:shadowColor="@color/black"-->
<!--                            app:shadowMargin="@dimen/_10sdp">-->

                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_height="@dimen/_250sdp"
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/bg_layout_blur"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:paddingLeft="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|left"
                                        android:layout_weight="1"
                                        android:src="@mipmap/ic_launcher_round"
                                        android:tag="binding_3"                                     />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:tag="binding_4"                                   
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_50ssp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center|right"
                                            android:paddingRight="@dimen/_10sdp"
                                            android:text="@string/tvWeather"
                                            android:textSize="@dimen/_14ssp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingLeft="@dimen/_20sdp"
                                            android:tag="binding_5"                                 
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center|right"
                                            android:paddingRight="@dimen/_10sdp"
                                            android:text="@string/tvHumidity"
                                            android:textSize="@dimen/_14ssp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingLeft="@dimen/_20sdp"
                                            android:tag="binding_6"                                    
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="normal" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
<!--                        </com.loopeer.shadow.ShadowView>-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Next 5 Day"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvDashbroad"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_210sdp"
                            android:layout_margin="@dimen/_10sdp" />
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="@string/tag_menu">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout>


         